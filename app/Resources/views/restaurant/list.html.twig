{% extends 'base.html.twig' %}

{% block body %}

    <b>Alle Restaurants:</b>
    <table class="table table-responsive">
        <thead>
        <tr>
            <th>Name</th>
            <th>Kategorien</th>
            <th>Stadt</th>
            <th>Website</th>
            <th>StraÃŸe</th>
            <th>Hausnummer</th>
        </tr>
        </thead>

        <tbody>
        {% for restaurant in restaurants %}
            <tr>
                <td>{{ restaurant.name }}</td>
                <td>
                    {% for cat in restaurant.categories.values %}
                        <span class="label label-default">{{ cat.categoryName }}</span>
                        {% endfor %}
                </td>
                <td>{{ restaurant.city.cityName }}</td>
                <td>{% if 'http' not in restaurant.website %}
                        <a href="http://{{ restaurant.website }}" target="_blank">{{ restaurant.website }}</a>
                    {% else %}
                        <a href="{{ restaurant.website }}" target="_blank">{{ restaurant.website }}</a>
                    {% endif %}
                </td>
                <td>{{ restaurant.street }}</td>
                <td>{{ restaurant.houseNo }}</td>
            </tr>

        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block description %}
    Alle Restaurants!
{% endblock %}