{% block navbar %}
    <nav class="navbar navbar-default fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                        data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand">WOF</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse">

                {% set route = app.request.get('_route') %}
                <ul class="nav navbar-nav">

                    <li><a href="{{ path('homepage') }}">Start</a></li>

                    <li class="{{ route starts with 'user' ? 'active' }}"><a
                                href="{{ path('user_profile') }}">Profil</a></li>

                    <li class="{{ route starts with 'group' ? 'active' }}"><a
                                href="{{ path('group_view') }}">Gruppen</a></li>

                    <li class="{{ route starts with 'restaurant' ? 'active' }}"><a
                                href="{{ path('restaurant_view') }}">Restaurants</a></li>

                    <li class="{{ route starts with 'category' ? 'active' }}"><a
                                href="{{ path('category_view') }}">Kategorien</a></li>

                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="{{ route starts with 'city' ? 'active' }}"><a
                                    href="{{ path('city_view') }}">St√§dte</a></li>
                    {% endif %}
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <li class="{{ route starts with 'admin' ? 'active' }}"><a
                                    href="{{ path('admin_view') }}">Admin</a></li>
                    {% endif %}
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="{{ path('user_profile') }}" class="navbar-link"><b>{{ app.user.username }}</b></a>
                    </li>
                    <li>
                        <a href="{{ path('logout') }}"><span class="glyphicon glyphicon-log-out"></span> Logout</a>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

{% endblock %}