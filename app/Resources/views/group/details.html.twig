{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="form-signin-heading">{{ group.name }}</h2>

    <div class="row">
        <div class="col-12">
            <a href="{{ path('group_add_location', {'group': group.id}) }}" class="btn btn-block disabled btn-lg btn-info">Essens Glückrad drehen!</a>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <a href="{{ path('group_add_location', {'group': group.id}) }}" class="btn btn-sm btn-block btn-success">Restaurant hinzufügen</a>
            <table class="table">
                <thead>
                    <tr>
                        <th class="col-8">Restaurants</th>
                        <th class="col-2"></th>
                        <th class="col-2"></th>
                    </tr>
                </thead>

                <tbody>

                    <tr>
                        <td>Name</td>
                        <td><a href="{{ path('group_add_location', {'group': group.id}) }}" class="btn disabled btn-sm btn-success">Bearb.</a></td>
                        <td><a href="{{ path('group_add_location', {'group': group.id}) }}" class="btn disabled btn-sm btn-outline-danger">Löschen</a></td>

                    </tr>


                </tbody>
            </table>
        </div>
        <div class="col-6">
            <div class="btn btn-sm btn-block disabled btn-success">Kategorien hinzufügen</div>
        </div>
    </div>



{% endblock %}

{% block description %}
    <b>Name:</b> {{ group.name }}<br>
    <b>Beschreibung:</b> {{ group.description }}<br>
    <b>Erstellt von:</b> {{ group.createdBy }}<br>
    <b>Erstellt am:</b> {{ group.createdAt|date ('d.m.Y') }}<br>
    <a class="btn btn-outline-danger btn-sm btn-block"
       href="{{ path('group_left', { 'group': group.id }) }}">Gruppe verlassen</a>
{% endblock %}
