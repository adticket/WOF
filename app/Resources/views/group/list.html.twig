{% extends 'base.html.twig' %}

{% block body %}

    <b>Alle Gruppen:</b>
    <table class="table table- table-responsive">
        <thead>
        <tr>
            <th>Name</th>
            <th>Beschreibung</th>
            <th>Ort</th>
            <th>Besitzer</th>
            <th>Beitreten</th>
        </tr>
        </thead>

        <tbody>
        {% for group in groups %}
            <tr>
                <td><a href="{{ path('group_details', { 'group': group.id }) }}">{{ group.name }}</a></td>
                <td>{{ group.description }}</td>
                <td>{{ group.city.cityName }}</td>
                <td>{{ group.createdBy }}</td>
                <td>
                    {% if group.id not in groups_for_user %}
                        <a class="btn btn-info btn-sm"
                           href="{{ path('group_join', { 'group': group.id }) }}">Beitreten</a>
                    {% else %}
                        <a class="btn btn-success btn-sm"
                           href="{{ path('group_details', { 'group': group.id }) }}">Details</a>
                    {% endif %}
                </td>

            </tr>

        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block description %}
    Erstelle eigene Gruppen oder trete ihnen bei um mit deinen Freunden essen zu gehen!
{% endblock %}
