{% extends 'base.html.twig' %}

{% block body %}

    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Restaurants</th>
                <th>Gruppen</th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            {% for city in cities %}
                <tr>
                    <td>{{ city.cityName }}</td>
                    <td>{{ city.restaurants.count }} x</td>
                    <td>{{ city.groups.count }} x</td>
                    <td><!-- Change Button -->
                        <button type="button" class="btn btn-warning" id="{{ city.id }}" data-toggle="modal"
                                data-target="#changeModal"><span class="glyphicon glyphicon-pencil"
                                                                 aria-hidden="true"></span>
                        </button>
                        <!-- Delete Button -->
                        <button type="button"
                                class="btn btn-danger" {% if city.restaurants.count != 0 %} disabled="disabled" {% else %} data-toggle="modal" data-target="#deleteModal" {% endif %} >
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- changeModal -->
    <div class="modal fade" id="changeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="text" class="form-control" id="name" placeholder="">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Abbrechen</button>
                    <button type="button" class="btn btn-success" id="saveChange">Speichern</button>
                </div>
            </div>
        </div>
    </div>

    <!-- deleteModal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Sicher das Sie die Stadt: X löschen möchten?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Abbrechen</button>
                    <button type="button" class="btn btn-danger" id="delete">Löschen</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block description %}
    <a class="btn btn-success btn-sm btn-block"
       href="{{ path('city_add') }}">Neue Stadt eintragen</a>
    <br>
    <b>Bereich nur für Admins sichtbar!</b>
{% endblock %}
