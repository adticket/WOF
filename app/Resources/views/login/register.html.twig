{% extends 'base_login.html.twig' %}

{% block body %}

    {% form_theme form 'bootstrap_3_layout.html.twig' %}
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4 col-sm-5 col-sm-offset-2 col-lg-2 col-lg-offset-5">
            {{ form_start(form) }}
            <form class="form-group">
                <h2 class="form-signin-heading text-center">Registrieren</h2>
                {{ form_errors(form) }}
                <div>
                    {{ form_row(form.username, { 'attr': {"placeholder":"6 bis 16 Zeichen"}, "label": "Username: " }) }}
                </div>
                <div>
                    {{ form_row(form.email, { 'attr': {"placeholder":"beispiel@mail.de"}, "label": "E-Mail: " }) }}
                </div>
                <div>
                    {{ form_row(form.plainPassword.first, { 'attr': {"placeholder":""}, "label": "Passwort: " }) }}
                </div>
                <div>

                    {{ form_row(form.plainPassword.second, { 'attr': {"placeholder":""}, "label": "Passwort wiederholen: " }) }}
                </div>

                {{ form_row(form._token) }}
                <button class="btn btn-primary btn-block" type="submit">Erstellen</button>
            </form>
            {{ form_end(form) }}
            <a class="btn btn-default btn-block" href="{{ path('login') }}" type="button">Zur√ºck</a>
        </div>
    </div>
{% endblock %}

{% block description %}
    Erstelle deinen eigenen Account und sei Teil der Wheel Of Fortune Community!
{% endblock %}
